generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id         String    @id @default(cuid())
  first_name String
  last_name  String
  email      String    @unique
  password   String
  created_at DateTime  @default(now())
  updated_at DateTime?
  tasks      task[]
}

model task {
  id            String     @id @default(cuid())
  title         String
  description   String
  status        TaskStatus @default(PENDING)
  created_by    user       @relation(fields: [created_by_id], references: [id])
  created_by_id String
  created_at    DateTime   @default(now())
  updated_at    DateTime?
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
}
